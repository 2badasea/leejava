<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- User layout -->
	<definition name="layout-tiles" template="/WEB-INF/views/tiles/tiles-layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/headerTemplete.jsp" />
		<put-attribute name="left" value="/WEB-INF/views/tiles/sidebarTemplete.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="foot" value="/WEB-INF/views/tiles/footerTemplete.jsp" />
	</definition>
	
	<definition name="*/*" extends="layout-tiles">
		<!--  return구문에서 */* 형태로 끝나는 것들은 body섹션으로 모두 들어간다. -->
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
		<put-attribute name="title" value="메인페이지 테스트" />
	</definition>
	
	
	<!-- admin layout  -->
	<definition name="admin-tiles" template="/WEB-INF/views/tiles/adminLayout.jsp">
		<put-attribute name="atitle" value="Java story Admin" />
		<put-attribute name="aheader" value="/WEB-INF/views/tiles/adminHeader.jsp" />
		<put-attribute name="asidebar" value="/WEB-INF/views/tiles/adminSidebar.jsp" />
		<put-attribute name="abody" value="" />
		<put-attribute name="afooter" value="/WEB-INF/views/tiles/adminFooter.jsp" />
	</definition>
	
	<definition name="home/admin/*" extends="admin-tiles">
		<put-attribute name="abody" value="/WEB-INF/views/home/admin/{1}.jsp" />
	</definition>
	
	
	
	
</tiles-definitions>


